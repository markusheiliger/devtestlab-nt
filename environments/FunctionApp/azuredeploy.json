{
	"$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {},
	"functions": [],
	"variables": {
		"resourcePrefix": "[concat('dtl', uniqueString(resourceGroup().id))]",
		"storageName": "[concat(variables('resourcePrefix'))]",
		"functionName": "[concat(variables('resourcePrefix'), '-fa')]",
		"hostingName": "[concat(variables('resourcePrefix'), '-hp')]"
	},
	"resources": [

		{
			"name": "[variables('storageName')]",
			"type": "Microsoft.Storage/storageAccounts",
			"apiVersion": "2019-06-01",
			"tags": {
				"displayName": "storageaccount1"
			},
			"location": "[resourceGroup().location]",
			"kind": "StorageV2",
			"sku": {
				"name": "Premium_LRS",
				"tier": "Premium"
			}
		},
		{
			"name": "[variables('hostingName')]",
			"type": "Microsoft.Web/serverfarms",
			"apiVersion": "2020-06-01",
			"location": "[resourceGroup().location]",
			"sku": {
				"name": "EP1",
				"tier": "ElasticPremium"
			},
			"kind": "elastic",
			"properties": {
				"maximumElasticWorkerCount": 20
			}
		},
		{
			"name": "[variables('functionName')]",
			"type": "Microsoft.Web/sites",
			"apiVersion": "2020-06-01",
			"location": "[resourceGroup().location]",
			"kind": "functionapp",
			"dependsOn": [
				"[resourceId('Microsoft.Web/serverfarms', variables('hostingName'))]",
				"[resourceId('Microsoft.Storage/storageAccounts', variables('storageName'))]"
			],
			"properties": {
				"serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingName'))]",
				"siteConfig": {
					"appSettings": [
						{
							"name": "AzureWebJobsDashboard",
							"value": "[concat('DefaultEndpointsProtocol=https;AccountName=', 'storageAccountName', ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')),'2015-05-01-preview').key1)]"
						},
						{
							"name": "AzureWebJobsStorage",
							"value": "[concat('DefaultEndpointsProtocol=https;AccountName=', 'storageAccountName', ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')),'2015-05-01-preview').key1)]"
						},
						{
							"name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
							"value": "[concat('DefaultEndpointsProtocol=https;AccountName=', 'storageAccountName', ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageName')),'2015-05-01-preview').key1)]"
						},
						{
							"name": "WEBSITE_CONTENTSHARE",
							"value": "[toLower('functionName')]"
						},
						{
							"name": "FUNCTIONS_EXTENSION_VERSION",
							"value": "~2"
						},
						{
							"name": "FUNCTIONS_WORKER_RUNTIME",
							"value": "dotnet"
						}
					]
				}
			}
		},
		{
			"type": "Microsoft.Web/sites/networkConfig",
			"apiVersion": "2020-06-01",
			"name": "[format('{0}/{1}', variables('functionName'), 'virtualNetwork')]",
			"properties": {
				"subnetResourceId": "$(LabSubnetId)",
				"swiftSupported": true
			},
			"dependsOn": [
				"[resourceId('Microsoft.Web/sites', variables('functionName'))]"
			]
		}
	],
	"outputs": {}
}